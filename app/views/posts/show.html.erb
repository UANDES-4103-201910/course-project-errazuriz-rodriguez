<html lang="en">
<head>
  <title>CSS Template</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<hr>

<body>

<div class="c" >
  <titulo><%= @post.title %>     <sub><small><small><mark> <%= link_to 'By  ' + @user.find_by(id: @post.user_id).name , @user.find_by(id: @post.user_id) %></mark></small></small></sub></titulo>
<hr>

<section>
  <nav>
    <ul>
      <%= link_to "Like", :action => :likes%>/<a href="#">Dislike</a>
      <li><a href="#">Flag as Inappropriate</a></li>
    </ul>
    <p>Likes: <%= @likes%></p>
    <p>DisLikes: <%= @dislikes%></p>
  </nav>
  
  <article>
    <h1>Description</h1>
    <%= @post.description %>
  </article>
  <article>
    <h1>Image</h1>
    <%= @post.image %>
  </article>
  <article>
    <h1>Location</h1>
    <%= @post.location %>
  </article>
  </div>
</section>
<section>
  <h1>Files</h1>
  <% @files.each do |f|%>
    <article><%= f.file %></article>
  <% end %>
</section>
<footer>
  <h1>Comments</h1>
  <table>
    <tbody>
      <% @comments.each do |cm| %>
        <tr>
          <td><%= link_to @user.find_by(id: cm.user_id).name, @user.find_by(id: cm.user_id)%>:  </td>
          <td><%= cm.created_at %>:  </td>
          <td><%= cm.comment %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</footer>

</body>
</html>
